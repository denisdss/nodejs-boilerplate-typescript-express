{
  "name": "nodejs-boilerplate-typescript-express",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start:dev": "tsx --env-file=.env src/server.ts",
    "start:watch": "tsx watch --env-file=.env src/server.ts",
    "dist": "tsup src --clean",
    "dist:esm": "tsup src --format esm --clean",
    "start:dist": "node dist/server.cjs PORT=8080"
  },
  "keywords": ["template","boilerplate","nodejs","typescript","tsup","tsx","tsc","express","cors"],
  "author": "DenisDSS",
  "license": "ISC",
  "description": "A simple template using typescript and express to start a project",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2"
  }
}
